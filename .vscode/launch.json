{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "action": "startDebugging",
        "name": "Launch Chrome session"
      }
    },
    {
      "name": "Launch Chrome session",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    }
  ]
}
